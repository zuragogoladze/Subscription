@model IEnumerable<SubscriberVML>

@{
    ViewBag.Title = "გამომწერები";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formTitle = ViewBag.Title;
}


<div class='m-content'>
    <div class='m-portlet m-portlet--mobile'>
        <div class='m-portlet__head'>
            <div class='m-portlet__head-caption'>
                <div class='m-portlet__head-title'>
                    <h3 class='m-portlet__head-text'>
                        გამომწერები
                    </h3>
                </div>
            </div>
            <div class='m-portlet__head-tools'>
                <ul class='m-portlet__nav'>
                    <li class='m-portlet__nav-item'>
                        @*<a href='/update' class='btn btn-primary m-btn m-btn--pill m-btn--custom m-btn--icon m-btn--air'>
                                <span>
                                    <span>
                                        ექსელში ექსპორტი
                                    </span>
                                </span>
                            </a>*@
                    </li>
                </ul>
            </div>
        </div>
        <div class='m-portlet__body'>
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable DTable-1 kt-datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsSubscribedToResearches)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubscriptionTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tags)
                        </th>
                        <th>ინსტრუმენტები</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.LsCheckBox(modelItem => item.IsSubscribedToResearches, false, false)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubscriptionTime)
                            </td>
                            <td>
                                @if (item.Tags.Count > 0)
                                {
                                    <div class="btn-group">
                                        <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                            Tags
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            @foreach (var tag in item.Tags)
                                            {
                                                <li>
                                                    <a href="/Tags/Update/@tag.Id">
                                                        @tag.Name
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }

                            </td>
                            <td>
                                <a href="#" class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill btn-row-delete" data-action="/DeleteSubscriber" title="Delete" id="@item.Id">
                                    <i class="la la-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

